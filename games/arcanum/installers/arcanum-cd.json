      {
        "insert-disc": {
          "requires": "Setup.exe",
          "description": "Insert disc"
        }
      },
      {
        "merge": {
          "src": "$DISC",
          "dst": "$GAMEDIR/drive_c/CDROM"
        }
      },
      {
        "insert-disc": {
          "requires": "Sierra/Arcanum/arcanum1.dat",
